{
    "manifest_version": 2,
    "name": "Test Extension",
    "author": "Warheart",
    "description": "test extension",
    "version": "0.0.1",
    "permissions": [
        "storage",
        "declarativeContent",
        "notifications",
        "alarms"
    ],

    "background": {
        "scripts": ["dist/index.js"],
        "persistent": false
    },
    "content_security_policy": "script-src 'self' https://kit.fontawesome.com/f69c5a1145.js; object-src 'self'",
    
    "browser_action": {
        "default_popup": "html/index.html",
        "default_icon": {
            "16": "images/get_started16.png",
            "32": "images/get_started32.png",
            "48": "images/get_started48.png",
            "128": "images/get_started128.png"
          }
      },
      "icons": {
        "16": "images/get_started16.png",
        "32": "images/get_started32.png",
        "48": "images/get_started48.png",
        "128": "images/get_started128.png"
      }
}